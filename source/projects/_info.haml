%dl.dl-horizontal
  %dt Releases
  %dd
    - if current_page.data.releases
      = link_to current_page.data.releases, current_page.data.releases
    - else
      Unreleased
  %dt Source code
  %dd
    - if current_page.data.repo.nil?
      = link_to "https://github.com/ruma/#{current_page.data.project}", "https://github.com/ruma/#{current_page.data.project}"
    - else
      = link_to "https://github.com/ruma/#{current_page.data.repo}", "https://github.com/ruma/#{current_page.data.repo}"
  %dt Documentation
  %dd
    - if !current_page.data.documentation.nil?
      = link_to current_page.data.documentation, current_page.data.documentation
    - else
      Not yet available
  %dt Bug reports
  %dd
    - if current_page.data.repo.nil?
      = link_to "https://github.com/ruma/#{current_page.data.project}/issues", "https://github.com/ruma/#{current_page.data.project}/issues"
    - else
      = link_to "https://github.com/ruma/#{current_page.data.repo}/issues", "https://github.com/ruma/#{current_page.data.repo}/issues"
